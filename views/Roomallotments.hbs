<!DOCTYPE html>
<html>
    <head>
        <title>Main page</title>
        <link rel="stylesheet" href="room.css">
        <script src="angular.min.js"></script>
        <script src="room.js"></script>
        <script src="main.js"></script>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <style>
        .r-h{
            height: 80px;
        }
        #sel1{
            border: 2px solid black;
        }
        #r-n{
            border: 2px solid grey;
            width:100px;
            height: 50px;
            text-align: center;
        }
       .grid-container {
            display: grid;
            grid-template-columns: auto auto auto auto auto;
            column-gap: 20px;
            row-gap: 20px;
            padding: 10px;
            width: 600px;
            margin: 20px;
        }
        .grid-item{
            border: 2px solid black;
            background-color: rgb(67, 79, 241);
            color: white;
            padding: 10px;
            text-align: center;
            font-size: 25px;
        }
        .grid-container1 {
            position: absolute;
            top: 30%;
            right: 20%;
            display: grid;
            background-color: rgb(173, 166, 166);
            grid-template-columns: auto auto;
            padding: 10px;
            width: auto;
            margin: 20px;
            border: 2px solid black;
            text-align: center;
            color: white;
        }
        .grid-item1{
            border: 2px solid black;
            background-color: rgb(67, 79, 241);
            color: white;
            padding: 10px;
            font-size: 25px;
            width: 100px;
            margin: 20px;
        }
        .grid-container1 button{
            width: 200px;
            font-size: 20px;
        }
        h3{
            font-size: 30px;
            font-weight: bolder;
        }
        h4{
            font-size: 30px;
            font-weight: bolder;
            color: black;
            padding: 20px;
        }

    </style>
    <body ng-app="myApp" ng-controller="firstCtrl">
        <header class="r-h">
            <img src="logo.png">
            <h2>TCE Hostel</h2>
        </header>
     <center><h4>Room Registration</h4> </center>   
    <div  class="container mt-5">  
        <form action="/room_check" method="post">
            <div  class="col-sm-2">  
                <select class="form-select" id="sel1" name="block" required>
                <option>Select Block</option>
                <option>A</option>
                <option>B</option>
                <option>C</option>
                <option>D</option>
                </select>
            </div><br>
            <div  class="col-sm-2">  
                <select class="form-select" id="sel1" name="floor" required>
                <option>Select Floor</option>
                <option>Ground</option>
                <option>First</option>
                <option>Second</option>
                </select>
            </div><br>
            <button type="submit" value="submit" class="btn btn-primary">Check</button>
        </form>
    </div>
    
    <div  class="grid-container" >
        {{#each rooms1}}
        <div class="grid-item">{{this}}</div>
        {{/each}}
    </div><br>
    <div class="container mt-3">
        <form action="/room_select" method="post">
            <div class="col-sm-2">  
                <select class="form-select" id="sel1" size="3"  name="room" required>
                    <option>Select Room</option>
                    {{#each rooms1}}
                    <option>{{this}}</option>
                    {{/each}}
                </select>
            </div><br><br>
            <button type="submit" value="submit" class="btn btn-primary">Select</button>
        </form>          
    </div><br>
    <form action="/room_register" method="post">
     <div class="grid-container1" >
             <h3>{{room_name}}</h3><br>
            {{#each room_num}}
            <div class="grid-item1">{{this}}</div>
            {{/each}}
            <button id="btn1" type="submit" value="submit" class="btn btn-primary">Register</button>        
    </div>
    </form>
    </body>
</html>
